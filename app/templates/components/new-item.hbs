<div class="container">
  <form>
    <div class="form-group">
      <label for="description">Item description</label>
      {{input id="description" value=description}}
    </div>
    <div class="form-group">
      <label for="cost">Item cost</label>
      {{input id="cost" value=cost}}
    </div>
    <div class="form-group">
      <label for="details">Item details</label>
      {{input id="details" value=details}}
    </div>
    <div class="form-group">
      <label for="image">Item image URL</label>
      {{input id="image" value=image}}
    </div>
    <button {{action 'saveNewItem'}}>Save New Item</button>
  </form>
</div>
